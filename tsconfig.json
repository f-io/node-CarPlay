{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2022",
    "module": "node16",
    "lib": [
      "es2022",
      "dom"
    ],
    "types": [
      "node",
      "w3c-web-usb"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16",
    "sourceMap": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "src/web/**/*"
  ],
  "include": [
    "src/**/*"
  ]
}
